/* pages/orderList/orderList.wxss */
@import "../../utils/BackGroundTemplate/BackGroundTemplate.wxss";
@import "Template/orderItemTemplate.wxss";

.contentView {
  position: absolute;
  width: 100%;
}

.searchContentView{
  position: fixed;
  left: 0px;
  top: 0px;
  display: flex;
  align-items: center;
  width: 100%;
  background-color: white;
  z-index: 600;
}

.searchTextView{
  display: flex;
  align-items: center;
  margin: 10px 0px 10px 15px;
  background-color: #f5f5f5;
  border-radius: 4px;
  width: 80%;
  height: 30px;
}

.searchImage{
  margin-left: 10px;
  width: 15px;
  height: 15px;
}

.searchInput{
  margin-left: 10px;
  width: calc(100% - 60px);
  font-size: 12px;
  color: #666666;
}

.searchButton{
  width: calc(20% - 15px);
  font-size: 12px;
  color: #5A5A5A;
  text-align: center;
}

.searchMenuView {
  display: flex;
  flex-direction: row;
  margin-top: 50px;
  width: 100%;
  height: 40px;
  background-color: white;
}

.orderMenuView {
  flex: 1;
  height: 100%;
  line-height: 40px;
  font-size: 16px;
  text-align: center;
  font-weight: 500;
}

.orderListScrollView{
  margin-top: 5px;
  width: 100%;
}
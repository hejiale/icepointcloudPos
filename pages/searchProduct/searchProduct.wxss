@import "../../utils/BackGroundTemplate/BackGroundTemplate.wxss";

.contentView{
  position: absolute;
  width: 100%;
  height: calc(100% - 44px);
  padding-bottom: 44px;
}

.searchContentView{
  position: fixed;
  left: 0px;
  top: 0px;
  display: flex;
  align-items: center;
  width: 100%;
  background-color: white;
  border-bottom: 1px solid #f5f5f5;
  z-index: 600;
}

.searchTextView{
  display: flex;
  align-items: center;
  margin: 10px 0px 10px 15px;
  background-color: #f5f5f5;
  border-radius: 4px;
  width: 80%;
  height: 30px;
}

.searchImage{
  margin-left: 10px;
  width: 15px;
  height: 15px;
}

.searchInput{
  margin-left: 10px;
  width: calc(100% - 60px);
  font-size: 12px;
  color: #666666;
}

.scanCodeImage{
  width: 19px;
  height: 18px;
}

.searchButton{
  width: calc(20% - 15px);
  font-size: 12px;
  color: #5A5A5A;
  text-align: center;
}

.glassContentView{
  position: absolute;
  display: flex;
  flex-direction: row;
  margin-top: 50px;
  width: 100%;
  height: calc(100% - 99px);
  background-color: white;
}

.glassClassView{
  width: 100px;
  height: 100%;
  border-right: 1px solid #f5f5f5;
}

.classView{
  font-size: 14px;
  width: 100%;
  padding: 15px 0px 15px 0px;
  text-align: center;
  border-bottom: 1px solid #f5f5f5;
}

.glassListView{
  width: calc(100% - 100px);
  height: 100%;
}

.glassView{
  display: flex;
  flex-direction: column;
  padding-top: 5px;
}

.glassNameText{
  font-size: 14px;
  font-weight: 600;
  padding:10px 0px 15px 10px;
}

.glassCountView{
  display: flex;
  justify-content: space-between;
  margin-left: 10px;
  padding-bottom: 5px;
}

.glassPriceText{
  font-size: 16px;
  color: #F73B00;
}

.editCartNumView{
  display: flex;
  align-items: center;
  margin-right: 10px;
}

.cartNumText{
  font-size: 14px;
  color: #507CFC;
  text-align: center;
  width: 30px;
}

.plusImage,.reduceImage{
  width: 20px;
  height: 20px;
}

.footView{
  display: flex;
  justify-content: space-between;
  position: fixed;
  bottom: 0px;
  left: 0px;
  width: 100%;
  height: 44px;
  background-color: white;
  border-top: 1px solid #f5f5f5;
  z-index: 600;
}

.footCartView{
  display: flex;
  align-items: center;
  margin-left: 20px;
}

.cartMenu{
  width: 19px;
  height: 19px;
}

.cartPriceText{
  margin-left: 10px;
  font-size: 16px;
  color: #507CFC;
  font-weight: 600;
}

.settlementButton{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100px;
  height: 100%;
  background-color: #507CFC;
  color: white;
  font-size: 16px;
}
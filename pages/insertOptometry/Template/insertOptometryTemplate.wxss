.optometryInfoView {
  display: flex;
  flex-direction: column;
  margin-top: 5px;
  width: 100%;
  background-color: white;
}

.optometryRightTitleView, .optometryLeftTitleView {
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #f5f5f5;
  height: 36px;
}

.optometryRightTitle, .optometryLeftTitle {
  font-size: 14px;
  color: #507cfc;
  font-weight: 700;
}

.optometryContentView {
  display: flex;
  width: 100%;
  border-top: 1px solid #f5f5f5;
}

.optometryRightContentView, .optometryLeftContentView {
  flex: 1;
  padding-bottom: 20px;
}

.optometryTypeView {
  display: flex;
  width: 100%;
  padding: 15px 0px 0px 20px;
}

.optometryTypeTitle {
  font-size: 12px;
  color: #5a5a5a;
}

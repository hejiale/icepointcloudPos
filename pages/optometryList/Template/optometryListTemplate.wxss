.optometryListView {
  display: flex;
  flex-direction: row;
  background-color: white;
}

.optometryListScrollView {
  width: 100%;
  height: 94px;
  overflow: hidden;
  white-space: nowrap;
}

.optometryItemView {
  display: inline-block;
  margin: 15px 15rpx 15px 15rpx;
  width: 136px;
  height: 64px;
  box-shadow:0px 0px  2px 1px #E3E3E3;
}

.optometryItemSubView{
  display: flex;
  align-items: center;
  width: 100%;
  height: 100%;
}

.optometryType{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 10px;
  width: 22px;
  height: 22px;
  border-radius: 10px;
  background-color: #507CFC;
  color: white;
  font-size: 12px;
}

.optometryOperationView{
  display: flex;
  flex-direction: column;
  margin-left: 10px;
}

.operationerText{
  color: #507CFC;
  font-size:12px;
  font-weight: 600;
}

.operationDateText{
  color: #507CFC;
  font-size:12px;
}

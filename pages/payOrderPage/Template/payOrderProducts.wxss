.productsView{
  display: flex;
  flex-direction: column;
  margin-top: 5px;
  width: 100%;
  background-color: white;
  padding-bottom: 10px;
}

.productTitleView{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.insertProductText{
  font-size: 12px;
  color: #507CFC;
  margin-right: 10px;
}

.productsTitle {
  padding: 10px 0px 10px 15px;
  font-size: 16px;
  font-weight: 600;
}

.productView{
  display: flex;
  flex-direction: column;
  margin: 10px 0px 0px 15px;
}

.productInfoView{
  display: flex;
  align-items: center;
}

.productName{
  font-size: 14px;
  width: 70%;
}

.productCount{
  font-size: 12px;
  color: #666666;
  width: 10%;
}

.productPrice{
  font-size: 14px;
  font-weight: 600;
  width: calc(20% - 10px);
  text-align: right;
}

.specificationView{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 5px;
}

.specificationText{
  font-size: 12px;
  color: #666666;
}

.afterPrice{
  font-size: 14px;
  color: #507CFC;
  margin-right: 10px;
}